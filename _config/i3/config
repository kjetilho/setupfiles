# start a terminal
bindsym $mod+Return       exec urxvt -name solarized
bindsym $mod+Shift+Return exec urxvt -name dump
bindsym $mod+Shift+i      exec run_irssi

mode "Floating" {
  bindsym $mod+Return       exec urxvt -T floating -name solarized, mode "default"
  bindsym $mod+Shift+Return exec urxvt -T floating -name dump, mode "default"
  bindsym Escape            mode "default"
}

