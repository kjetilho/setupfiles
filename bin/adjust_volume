#! /bin/bash

if [ $# != 2 ]
then
    cat <<EOF >&2
Usage: $0 <channel> <adjustment>

Examples:
  volume_adjust Master toggle   -- toggles mute on/off
  volume_adjust Master 5%+      -- increase volume by 5%

EOF
    exit 64
fi

case $2 in
    toggle) amixer sset $1 $2 >/dev/null ;;
    *)      amixer set $1 $2 >/dev/null ;;
esac

pkill -USR1 -x i3status
