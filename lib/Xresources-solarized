! Solarized color scheme for the X Window System
!
! http://ethanschoonover.com/solarized


! Common

#define S_yellow        #b58900
#define S_orange        #cb4b16
#define S_red           #dc322f
#define S_magenta       #d33682
#define S_violet        #6c71c4
#define S_blue          #268bd2
#define S_cyan          #2aa198
#define S_green         #859900
#define K_S_green       #20a000 /* kjetilho: make it greener */


! Dark

#define S_base03        #002b36
#define S_base02        #073642
#define S_base01        #586e75
#define S_base00        #657b83
#define S_base0         #839496
#define K_S_base0       #b7cfd2 /* kjetilho: a little (40%) lighter foreground */
#define S_base1         #93a1a1
#define S_base2         #eee8d5
#define S_base3         #fdf6e3


! Light

#define S_L_base03        #fdf6e3
#define S_L_base02        #eee8d5
#define S_L_base01        #93a1a1
#define S_L_base00        #839496
#define S_L_base0         #657b83
#define K_S_L_base0_50    #323d41 /* kjetilho: a little (50%) darker foreground */
#define K_S_L_base0_70    #1e2527 /* kjetilho: a little (70%) darker foreground */
#define K_S_L_base0_80    #14181a /* kjetilho: a little (80%) darker foreground */
#define K_S_L_base0       #0a0c0b /* kjetilho: a little (90%) darker foreground */
#define S_L_base1         #586e75
#define S_L_base2         #073642
#define S_L_base3         #002b36


! To only apply colors to your terminal, for example, prefix
! the color assignment statement with its name. Example:
!
! URxvt*background:            S_base03

solarized*background:              S_L_base03
solarized*foreground:              K_S_L_base0
solarized*fading:                  30
solarized*fadeColor:               black
solarized*cursorColor:             S_L_base1
! Changing mouse pointer colour only works when theme is disabled/unsupported
! XTerm resource names
solarized*pointerColorBackground:  S_L_base01
solarized*pointerColorForeground:  S_L_base1
! RXvt resource names
solarized*pointerColor2:           S_L_base01
solarized*pointerColor:            S_L_base1

solarized*color0:                  S_L_base02
solarized*color1:                  S_red
solarized*color2:                  K_S_green
solarized*color3:                  S_yellow
solarized*color4:                  S_blue
solarized*color5:                  S_magenta
solarized*color6:                  S_cyan
solarized*color7:                  S_L_base2
solarized*color9:                  S_orange
solarized*color8:                  S_L_base03
solarized*color10:                 S_L_base01
solarized*color11:                 S_L_base00
solarized*color12:                 S_L_base0
solarized*color13:                 S_violet
solarized*color14:                 S_L_base1
solarized*color15:                 S_L_base3

dark*background:              S_base03
dark*foreground:              K_S_base0
dark*fading:                  30
dark*fadeColor:               black
dark*cursorColor:             S_base1
! Changing mouse pointer colour only works when theme is disabled/unsupported
! XTerm resource names
dark*pointerColorBackground:  S_base01
dark*pointerColorForeground:  S_base1
! RXvt resource names
dark*pointerColor2:           S_base01
dark*pointerColor:            S_base1

dark*color0:                  S_base02
dark*color1:                  S_red
dark*color2:                  K_S_green
dark*color3:                  S_yellow
dark*color4:                  S_blue
dark*color5:                  S_magenta
dark*color6:                  S_cyan
dark*color7:                  S_base2
dark*color9:                  S_orange
dark*color8:                  S_base03
dark*color10:                 S_base01
dark*color11:                 S_base00
dark*color12:                 S_base0
dark*color13:                 S_violet
dark*color14:                 S_base1
dark*color15:                 S_base3

dump*background:              #d0d0ff
dump*fading:                  20 /* 30 normally */

dump*pointerColor2:           darkred  // background
dump*pointerColor:            red      // foreground

/* rest is same as solarized */
dump*foreground:              K_S_L_base0
dump*fadeColor:               black
dump*cursorColor:             S_L_base1

dump*color0:                  S_L_base02
dump*color1:                  S_red
dump*color2:                  K_S_green
dump*color3:                  S_yellow
dump*color4:                  S_blue
dump*color5:                  S_magenta
dump*color6:                  S_cyan
dump*color7:                  S_L_base2
dump*color9:                  S_orange
dump*color8:                  S_L_base03
dump*color10:                 S_L_base01
dump*color11:                 S_L_base00
dump*color12:                 S_L_base0
dump*color13:                 S_violet
dump*color14:                 S_L_base1
dump*color15:                 S_L_base3

